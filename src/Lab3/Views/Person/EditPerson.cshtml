@model Lab3.Models.Person

<h2>Edit a Person</h2>

<form asp-action="EditPerson" asp-route-id="@Model.PersonID" method="post">
    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
        <input type="hidden" asp-for="PersonID" />

    </div>
    <div class="form-group">
        <label class="control-label col-md-2" asp-for="FirstName">First Name</label>
        <div class="col-md-10">
            <input class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" asp-for="LastName">Last Name</label>
        <div class="col-md-10">
            <input class="form-control" asp-for="LastName" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" asp-for="Birthday">Birthday</label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Birthday" />
            <span asp-validation-for="Birthday" class="text-danger"></span>

        </div>
    </div>
   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
   
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
